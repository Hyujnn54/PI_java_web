package utils;

import org.mindrot.jbcrypt.BCrypt;

public final class PasswordUtil {

    private PasswordUtil() {}

    // hash plain password
    public static String hash(String plain) {
        if (plain == null) throw new IllegalArgumentException("Password cannot be null");
        return BCrypt.hashpw(plain, BCrypt.gensalt(12));
    }

    // verify plain password vs stored hash
    public static boolean verify(String plain, String hashed) {
        if (plain == null || hashed == null) return false;
        return BCrypt.checkpw(plain, hashed);
    }

    // avoid double hashing (when you read from DB then update without changing)
    public static boolean looksLikeBCryptHash(String s) {
        if (s == null) return false;
        return s.startsWith("$2a$") || s.startsWith("$2b$") || s.startsWith("$2y$");
    }
}