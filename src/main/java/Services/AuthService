package Services;

import Models.Role;
import utils.MyDatabase;

import java.sql.*;

public class AuthService {
    private final Connection cnx = MyDatabase.getInstance().getConnection();

    public LoggedUser login(String email, String password) throws SQLException {
        String sql = "SELECT id, email, role FROM users WHERE email=? AND password=? AND is_active=1";
        try (PreparedStatement ps = cnx.prepareStatement(sql)) {
            ps.setString(1, email);
            ps.setString(2, password);

            try (ResultSet rs = ps.executeQuery()) {
                if (rs.next()) {
                    String roleStr = rs.getString("role");
                    Role role = Role.valueOf(roleStr.trim().toUpperCase()); // <-- important

                    return new LoggedUser(
                            rs.getLong("id"),
                            rs.getString("email"),
                            role
                    );
                }
            }
        }
        return null;
    }
}
