<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.FeedbackManagementController" spacing="15" style="-fx-background-color: #ecf0f1;">
    <padding>
        <Insets top="20.0" left="20.0" right="20.0" bottom="20.0" />
    </padding>

    <Label text="Interview Feedback Management">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <HBox spacing="15" VBox.vgrow="ALWAYS">
        <!-- Left side: VBox List -->
        <VBox HBox.hgrow="ALWAYS" spacing="10" style="-fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-padding: 10;">
            <Label text="Feedback List">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>

            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="feedbackListContainer" spacing="8" style="-fx-padding: 5;">
                        <!-- Feedback items will be generated dynamically -->
                        <VBox spacing="5" style="-fx-border-color: #d5d8dc; -fx-border-width: 1; -fx-padding: 10; -fx-background-color: white;">
                            <HBox spacing="10">
                                <Label text="ID: 1" style="-fx-font-weight: bold;" prefWidth="40" />
                                <Label text="Interview: 101" prefWidth="90" />
                                <Label text="Recruiter: R1" prefWidth="100" />
                            </HBox>
                            <HBox spacing="10">
                                <Label text="Tech: 85" style="-fx-font-size: 11;" prefWidth="70" />
                                <Label text="Comm: 80" style="-fx-font-size: 11;" prefWidth="70" />
                                <Label text="Culture: 90" style="-fx-font-size: 11;" prefWidth="80" />
                                <Label text="Overall: 85" style="-fx-font-size: 11; -fx-text-fill: green;" prefWidth="80" />
                            </HBox>
                            <Label text="Decision: PASS" style="-fx-font-size: 11; -fx-text-fill: green; -fx-font-weight: bold;" />
                        </VBox>
                    </VBox>
                </content>
            </ScrollPane>
        </VBox>

        <!-- Right side: Form -->
        <VBox spacing="12" prefWidth="250" style="-fx-border-left: 1 solid #bdc3c7; -fx-padding: 0 0 0 15;">
            <Label text="Feedback Details">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>

            <VBox spacing="5">
                <Label text="Interview ID:" style="-fx-font-size: 11;" />
                <TextField fx:id="txtInterviewId" promptText="Enter interview ID" />
            </VBox>

            <VBox spacing="5">
                <Label text="Recruiter ID:" style="-fx-font-size: 11;" />
                <TextField fx:id="txtRecruiterId" promptText="Enter recruiter ID" />
            </VBox>

            <VBox spacing="5">
                <Label text="Technical Score (0-100):" style="-fx-font-size: 11;" />
                <TextField fx:id="txtTechnicalScore" promptText="Enter score" />
            </VBox>

            <VBox spacing="5">
                <Label text="Communication Score (0-100):" style="-fx-font-size: 11;" />
                <TextField fx:id="txtCommunicationScore" promptText="Enter score" />
            </VBox>

            <VBox spacing="5">
                <Label text="Culture Fit Score (0-100):" style="-fx-font-size: 11;" />
                <TextField fx:id="txtCultureFitScore" promptText="Enter score" />
            </VBox>

            <VBox spacing="5">
                <Label text="Decision:" style="-fx-font-size: 11;" />
                <ComboBox fx:id="comboDecision" prefWidth="260.0" promptText="Select decision" />
            </VBox>

            <VBox spacing="5">
                <Label text="Comment:" style="-fx-font-size: 11;" />
                <TextArea fx:id="txtComment" prefHeight="60.0" promptText="Enter comments" />
            </VBox>

            <HBox spacing="8" style="-fx-padding: 15 0 0 0;">
                <Button fx:id="btnAdd" onAction="#handleAddFeedback" text="Add" prefWidth="100.0" />
                <Button fx:id="btnUpdate" onAction="#handleUpdateFeedback" text="Update" prefWidth="100.0" />
            </HBox>

            <HBox spacing="8">
                <Button fx:id="btnDelete" onAction="#handleDeleteFeedback" text="Delete" prefWidth="100.0" />
                <Button fx:id="btnRefresh" onAction="#handleRefresh" text="Refresh" prefWidth="100.0" />
            </HBox>
        </VBox>
    </HBox>
</VBox>

