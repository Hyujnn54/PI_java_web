<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.MainShellController" style="-fx-background-color: #f8f9fa;"
            stylesheets="@styles.css">

    <!-- TOP BAR -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-bar">
            <HBox alignment="CENTER_LEFT" spacing="12">
                <ImageView fitHeight="32" fitWidth="32" preserveRatio="true">
                    <image>
                        <Image url="@images/logo.jpg"/>
                    </image>
                </ImageView>
                <Label text="Talent Bridge" styleClass="logo-text"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <HBox alignment="CENTER_RIGHT" spacing="16">
                <Button fx:id="btnNotifications" text="ðŸ””" style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-cursor: hand;" onAction="#handleNotifications"/>

                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Label fx:id="lblUserName" text="Sarah Johnson" styleClass="user-name"/>
                    <Label fx:id="lblUserRole" text="Recruiter" styleClass="user-role"/>
                </VBox>

                <Button fx:id="btnUserProfile" text="ðŸ‘¤" styleClass="profile-button" onAction="#handleUserProfile"/>
                <Button fx:id="btnDisconnect" text="âŽ‹ Disconnect" styleClass="disconnect-button" onAction="#handleDisconnect"/>
            </HBox>
        </HBox>
    </top>

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox prefWidth="260" spacing="12" styleClass="sidebar" style="-fx-padding: 30 15;">

            <!-- Navigation Section -->
            <VBox spacing="8">
                <Label text="NAVIGATION" styleClass="sidebar-section-label"/>

                <Button fx:id="btnInterviews" onAction="#handleInterviewsNav" text="Interviews"
                        styleClass="nav-button nav-button-active">
                    <VBox.margin><Insets top="5"/></VBox.margin>
                </Button>

                <Button fx:id="btnApplications" onAction="#handleApplicationsNav" text="Applications"
                        styleClass="nav-button nav-button-inactive"/>

                <Button fx:id="btnJobOffers" onAction="#handleJobOffersNav" text="Job Offers"
                        styleClass="nav-button nav-button-inactive"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- Bottom Section -->
            <VBox spacing="8">
                <Separator styleClass="sidebar-separator"/>

                <Button fx:id="btnFullscreenToggle" onAction="#handleFullscreenToggle" text="Fullscreen"
                        styleClass="sidebar-bottom-button">
                    <VBox.margin><Insets top="5"/></VBox.margin>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- CONTENT SLOT -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f8f9fa; -fx-padding: 30;" />
    </center>

</BorderPane>

