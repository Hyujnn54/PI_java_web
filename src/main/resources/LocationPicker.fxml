<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.LocationPickerController"
      spacing="10" style="-fx-background-color: #f3f6fb;">

    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <Label text="Pick a location on the map"
           style="-fx-font-size: 16px; -fx-font-weight: 800;"/>

    <WebView fx:id="webView" prefHeight="520"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="lblHint" text="Click on the map to select a point"
               style="-fx-text-fill:#6b7280; -fx-font-weight: 700;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button fx:id="btnSelect" text="Select" onAction="#handleSelect" disable="true"
                style="-fx-background-color:#10b981; -fx-text-fill:white; -fx-font-weight:900;"/>
    </HBox>

</VBox>