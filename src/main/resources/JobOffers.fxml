<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="18" styleClass="page">
    <padding>
        <Insets top="20.0" left="20.0" right="20.0" bottom="20.0" />
    </padding>

    <!-- Page Header -->
    <VBox spacing="6" styleClass="page-header">
        <Label text="Job Offers" styleClass="page-title" />
        <Label text="Manage job offers (UI template)" styleClass="page-subtitle" />
    </VBox>

    <!-- Main Body -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Left: Modern list area (cards) -->
        <VBox spacing="12" HBox.hgrow="ALWAYS" styleClass="section-card">
            <Label text="Offers" styleClass="section-title" />
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                <VBox spacing="12" style="-fx-padding: 10;">
                    <!-- Placeholder card -->
                    <VBox spacing="10" styleClass="interview-card">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Senior Developer" styleClass="card-title" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label text="ACTIVE" styleClass="tag tag-success" />
                        </HBox>
                        <HBox spacing="30">
                            <VBox spacing="4">
                                <Label text="Company" styleClass="info-label" />
                                <Label text="Tech Corp" styleClass="info-value" />
                            </VBox>
                            <VBox spacing="4">
                                <Label text="Salary" styleClass="info-label" />
                                <Label text="\$150k" styleClass="info-value" />
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>

        <!-- Right: Modern actions panel placeholder -->
        <VBox spacing="12" prefWidth="340" styleClass="section-card">
            <Label text="Actions" styleClass="section-title" />
            <Label text="This module will be wired later. For now it uses the shared template." styleClass="page-subtitle" wrapText="true" />

            <HBox spacing="10">
                <Button text="+ Add Offer" styleClass="btn-primary" />
                <Button text="Refresh" styleClass="btn-secondary" />
            </HBox>

            <Separator />

            <Label text="Tip: Use cards (VBox) like Interview screen for items." styleClass="info-label" wrapText="true" />
        </VBox>
    </HBox>
</VBox>

