<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="20" styleClass="page"
      stylesheets="@styles.css" style="-fx-background-color: #f8f9fa;">

    <padding>
        <Insets top="25" left="25" right="25" bottom="25"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Job Offers Management" styleClass="page-title"/>
            <Label text="Create and manage job postings" styleClass="page-subtitle"/>
        </VBox>
        <Button text="+ New Job Offer" styleClass="btn-primary" style="-fx-font-size: 14px; -fx-padding: 12 24;"/>
    </HBox>

    <!-- Main Content: Split View -->
    <HBox spacing="25" VBox.vgrow="ALWAYS">

        <!-- LEFT SIDE: Job Offers List (40%) -->
        <VBox spacing="15" prefWidth="450" styleClass="job-offers-list-container">
            <Label text="Active Job Offers" styleClass="section-title"/>

            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="transparent-scroll">
                <VBox spacing="15" style="-fx-padding: 5;">

                    <!-- Job Offer Card 1 -->
                    <VBox styleClass="job-offer-card job-offer-selected" spacing="12">
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <VBox HBox.hgrow="ALWAYS" spacing="6">
                                <Label text="Senior Frontend Developer" styleClass="job-title"/>
                                <Label text="Technology â€¢ Full-time" styleClass="job-meta"/>
                            </VBox>
                            <Label text="ACTIVE" styleClass="job-status-badge job-status-active"/>
                        </HBox>

                        <HBox spacing="15">
                            <Label text="ðŸ“ New York, NY" styleClass="job-info"/>
                            <Label text="ðŸ’° $120k - $150k" styleClass="job-info"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="12 Applicants" styleClass="applicant-count"/>
                            <Label text="â€¢" styleClass="job-separator"/>
                            <Label text="Posted: 1/15/2026" styleClass="job-date"/>
                        </HBox>
                    </VBox>

                    <!-- Job Offer Card 2 -->
                    <VBox styleClass="job-offer-card" spacing="12">
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <VBox HBox.hgrow="ALWAYS" spacing="6">
                                <Label text="Product Designer" styleClass="job-title"/>
                                <Label text="Design â€¢ Full-time" styleClass="job-meta"/>
                            </VBox>
                            <Label text="ACTIVE" styleClass="job-status-badge job-status-active"/>
                        </HBox>

                        <HBox spacing="15">
                            <Label text="ðŸ“ San Francisco, CA" styleClass="job-info"/>
                            <Label text="ðŸ’° $100k - $130k" styleClass="job-info"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="8 Applicants" styleClass="applicant-count"/>
                            <Label text="â€¢" styleClass="job-separator"/>
                            <Label text="Posted: 1/18/2026" styleClass="job-date"/>
                        </HBox>
                    </VBox>

                    <!-- Job Offer Card 3 -->
                    <VBox styleClass="job-offer-card" spacing="12">
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <VBox HBox.hgrow="ALWAYS" spacing="6">
                                <Label text="DevOps Engineer" styleClass="job-title"/>
                                <Label text="Technology â€¢ Full-time" styleClass="job-meta"/>
                            </VBox>
                            <Label text="CLOSED" styleClass="job-status-badge job-status-closed"/>
                        </HBox>

                        <HBox spacing="15">
                            <Label text="ðŸ“ Remote" styleClass="job-info"/>
                            <Label text="ðŸ’° $110k - $140k" styleClass="job-info"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="24 Applicants" styleClass="applicant-count"/>
                            <Label text="â€¢" styleClass="job-separator"/>
                            <Label text="Posted: 1/10/2026" styleClass="job-date"/>
                        </HBox>
                    </VBox>

                </VBox>
            </ScrollPane>
        </VBox>

        <!-- RIGHT SIDE: Job Offer Form (60%) -->
        <VBox spacing="20" HBox.hgrow="ALWAYS" styleClass="job-form-container">

            <Label text="Job Offer Details" styleClass="section-title"/>

            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="transparent-scroll">
                <VBox spacing="20" style="-fx-padding: 10;">

                    <!-- Basic Information Section -->
                    <VBox spacing="15" styleClass="form-section-card">
                        <Label text="Basic Information" styleClass="form-section-title"/>

                        <VBox spacing="8">
                            <Label text="Job Title *" styleClass="form-label"/>
                            <TextField fx:id="txtJobTitle" promptText="e.g. Senior Frontend Developer" styleClass="modern-text-field"/>
                        </VBox>

                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Department *" styleClass="form-label"/>
                                <ComboBox fx:id="cbDepartment" promptText="Select department" prefWidth="200" styleClass="modern-combo"/>
                            </VBox>

                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Employment Type *" styleClass="form-label"/>
                                <ComboBox fx:id="cbEmploymentType" promptText="Select type" prefWidth="200" styleClass="modern-combo"/>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Location & Salary Section -->
                    <VBox spacing="15" styleClass="form-section-card">
                        <Label text="Location &amp; Compensation" styleClass="form-section-title"/>

                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Location *" styleClass="form-label"/>
                                <TextField fx:id="txtLocation" promptText="e.g. New York, NY or Remote" styleClass="modern-text-field"/>
                            </VBox>

                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Work Mode" styleClass="form-label"/>
                                <ComboBox fx:id="cbWorkMode" promptText="Select mode" prefWidth="200" styleClass="modern-combo"/>
                            </VBox>
                        </HBox>

                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Salary Min ($)" styleClass="form-label"/>
                                <TextField fx:id="txtSalaryMin" promptText="e.g. 100000" styleClass="modern-text-field"/>
                            </VBox>

                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Salary Max ($)" styleClass="form-label"/>
                                <TextField fx:id="txtSalaryMax" promptText="e.g. 150000" styleClass="modern-text-field"/>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Job Description Section -->
                    <VBox spacing="15" styleClass="form-section-card">
                        <Label text="Job Description" styleClass="form-section-title"/>

                        <VBox spacing="8">
                            <Label text="Description *" styleClass="form-label"/>
                            <TextArea fx:id="txtDescription" promptText="Enter detailed job description..."
                                      prefRowCount="6" wrapText="true" styleClass="modern-text-area"/>
                        </VBox>

                        <VBox spacing="8">
                            <Label text="Requirements" styleClass="form-label"/>
                            <TextArea fx:id="txtRequirements" promptText="Enter job requirements (one per line)..."
                                      prefRowCount="5" wrapText="true" styleClass="modern-text-area"/>
                        </VBox>

                        <VBox spacing="8">
                            <Label text="Benefits" styleClass="form-label"/>
                            <TextArea fx:id="txtBenefits" promptText="Enter benefits offered..."
                                      prefRowCount="4" wrapText="true" styleClass="modern-text-area"/>
                        </VBox>
                    </VBox>

                    <!-- Additional Information Section -->
                    <VBox spacing="15" styleClass="form-section-card">
                        <Label text="Additional Information" styleClass="form-section-title"/>

                        <HBox spacing="15">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Experience Level" styleClass="form-label"/>
                                <ComboBox fx:id="cbExperienceLevel" promptText="Select level" prefWidth="200" styleClass="modern-combo"/>
                            </VBox>

                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Application Deadline" styleClass="form-label"/>
                                <DatePicker fx:id="dpDeadline" promptText="Select deadline" prefWidth="200" styleClass="modern-date-picker"/>
                            </VBox>
                        </HBox>

                        <VBox spacing="8">
                            <Label text="Contact Email" styleClass="form-label"/>
                            <TextField fx:id="txtContactEmail" promptText="hr@company.com" styleClass="modern-text-field"/>
                        </VBox>
                    </VBox>

                    <!-- Action Buttons -->
                    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="form-action-buttons">
                        <Button text="ðŸ’¾ Save Job Offer" styleClass="btn-primary action-button" style="-fx-font-size: 14px;"/>
                        <Button text="ðŸ“¤ Publish Now" styleClass="btn-success action-button" style="-fx-font-size: 14px;"/>
                        <Button text="ðŸ“‹ Save as Draft" styleClass="btn-secondary action-button" style="-fx-font-size: 14px;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="ðŸ—‘ Clear Form" styleClass="btn-danger action-button" style="-fx-font-size: 14px;"/>
                    </HBox>

                </VBox>
            </ScrollPane>

        </VBox>

    </HBox>

</VBox>

