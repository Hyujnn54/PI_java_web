<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.ProfileController"
      spacing="16"
      stylesheets="@styles.css"
      style="-fx-background-color: #f3f6fb;">

    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <!-- Header -->
    <VBox spacing="4"
          style="-fx-padding: 18; -fx-background-color: white; -fx-background-radius: 16;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 18, 0, 0, 6);">
        <Label text="My Profile"
               style="-fx-font-size: 24px; -fx-font-weight: 800; -fx-text-fill: #1f2a37;"/>
        <Label text="Update your personal info and security settings"
               style="-fx-font-size: 13px; -fx-text-fill: #6b7280;"/>
    </VBox>

    <!-- Main card -->
    <VBox spacing="16"
          style="-fx-padding: 18; -fx-background-color: white; -fx-background-radius: 16;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 16, 0, 0, 6);">

        <!-- Personal Information -->
        <VBox spacing="10">
            <Label text="Personal Information"
                   style="-fx-font-size: 15px; -fx-font-weight: 800; -fx-text-fill: #111827;"/>

            <GridPane hgap="14" vgap="12">
                <columnConstraints>
                    <ColumnConstraints minWidth="140" prefWidth="160" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="First name" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       style="-fx-text-fill: #374151; -fx-font-weight: 700;"/>
                <TextField fx:id="tfFirstName" GridPane.rowIndex="0" GridPane.columnIndex="1"
                           promptText="Your first name"
                           style="-fx-padding: 10; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e5e7eb;"/>

                <Label text="Email" GridPane.rowIndex="1" GridPane.columnIndex="0"
                       style="-fx-text-fill: #374151; -fx-font-weight: 700;"/>
                <TextField fx:id="tfEmail" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"
                           style="-fx-padding: 10; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e5e7eb;
                                  -fx-opacity: 0.85;"/>

                <Label text="Phone" GridPane.rowIndex="2" GridPane.columnIndex="0"
                       style="-fx-text-fill: #374151; -fx-font-weight: 700;"/>
                <TextField fx:id="tfPhone" GridPane.rowIndex="2" GridPane.columnIndex="1"
                           promptText="Example: 22123456"
                           style="-fx-padding: 10; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e5e7eb;"/>
            </GridPane>
        </VBox>

        <Separator />

        <!-- Security -->
        <VBox spacing="10">
            <Label text="Security"
                   style="-fx-font-size: 15px; -fx-font-weight: 800; -fx-text-fill: #111827;"/>

            <GridPane hgap="14" vgap="12">
                <columnConstraints>
                    <ColumnConstraints minWidth="140" prefWidth="160" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="New password" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       style="-fx-text-fill: #374151; -fx-font-weight: 700;"/>
                <PasswordField fx:id="pfPassword"
                               promptText="Leave empty to keep current password"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"
                               style="-fx-padding: 10; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e5e7eb;"/>
            </GridPane>

            <HBox spacing="10">
                <Button fx:id="btnEnableFace" text="Enable Face Login" onAction="#handleEnableFaceLogin"
                        style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: 800;
                               -fx-background-radius: 10; -fx-padding: 10 14; -fx-cursor: hand;"/>
                <Button fx:id="btnDisableFace" text="Disable Face Login" onAction="#handleDisableFaceLogin"
                        style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: 800;
                               -fx-background-radius: 10; -fx-padding: 10 14; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </VBox>

    <!-- Recruiter block -->
    <VBox fx:id="recruiterBlock" spacing="10" visible="false" managed="false"
          style="-fx-padding: 16; -fx-background-color: white; -fx-background-radius: 16;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 16, 0, 0, 6);">
        <Label text="Recruiter Info"
               style="-fx-font-size: 15px; -fx-font-weight: 800; -fx-text-fill: #111827;"/>

        <GridPane hgap="14" vgap="12">
            <columnConstraints>
                <ColumnConstraints minWidth="140" prefWidth="160" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Company name" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-text-fill: #374151; -fx-font-weight: 700;"/>
            <TextField fx:id="tfCompanyName" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       promptText="Company name"
                       style="-fx-padding: 10; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e5e7eb;"/>

            <Label text="Company location" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-text-fill: #374151; -fx-font-weight: 700;"/>
            <TextField fx:id="tfCompanyLocation" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       promptText="Company location"
                       style="-fx-padding: 10; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e5e7eb;"/>
        </GridPane>
    </VBox>

    <!-- Candidate block -->
    <VBox fx:id="candidateBlock" spacing="10" visible="false" managed="false"
          style="-fx-padding: 16; -fx-background-color: white; -fx-background-radius: 16;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 16, 0, 0, 6);">
        <Label text="Candidate Info"
               style="-fx-font-size: 15px; -fx-font-weight: 800; -fx-text-fill: #111827;"/>

        <GridPane hgap="14" vgap="12">
            <columnConstraints>
                <ColumnConstraints minWidth="140" prefWidth="160" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Location" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-text-fill: #374151; -fx-font-weight: 700;"/>
            <TextField fx:id="tfCandidateLocation" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       promptText="Location"
                       style="-fx-padding: 10; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e5e7eb;"/>

            <Label text="Education level" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-text-fill: #374151; -fx-font-weight: 700;"/>
            <TextField fx:id="tfEducationLevel" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       promptText="Education level"
                       style="-fx-padding: 10; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e5e7eb;"/>

            <Label text="Experience years" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-text-fill: #374151; -fx-font-weight: 700;"/>
            <TextField fx:id="tfExperienceYears" GridPane.rowIndex="2" GridPane.columnIndex="1"
                       promptText="Example: 2"
                       style="-fx-padding: 10; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e5e7eb;"/>

            <Label text="CV path" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-text-fill: #374151; -fx-font-weight: 700;"/>
            <TextField fx:id="tfCvPath" GridPane.rowIndex="3" GridPane.columnIndex="1"
                       promptText="C:\...\cv.pdf"
                       style="-fx-padding: 10; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e5e7eb;"/>
        </GridPane>
    </VBox>

    <!-- Save bar -->
    <HBox spacing="12" alignment="CENTER_LEFT"
          style="-fx-padding: 14 18; -fx-background-color: white; -fx-background-radius: 16;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 16, 0, 0, 6);">
        <Button text="Save Changes" onAction="#handleSave"
                style="-fx-background-color:#2d8cff; -fx-text-fill:white; -fx-font-weight: 900;
                       -fx-background-radius: 10; -fx-padding: 10 16; -fx-cursor: hand;"/>
        <Label fx:id="lblStatus" text=""
               style="-fx-text-fill: #6b7280; -fx-font-weight: 700;"/>
    </HBox>

</VBox>