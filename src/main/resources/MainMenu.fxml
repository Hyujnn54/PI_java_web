<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MainMenuController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label text="Interview Management System">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
    </Label>

    <Label text="Select a module to manage:">
        <font>
            <Font size="16.0" />
        </font>
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Label>

    <Button fx:id="btnInterviews" onAction="#handleInterviewsButton" prefWidth="300.0" text="Interview Management">
        <font>
            <Font size="16.0" />
        </font>
        <VBox.margin>
            <Insets top="30.0" />
        </VBox.margin>
    </Button>

    <Button fx:id="btnFeedback" onAction="#handleFeedbackButton" prefWidth="300.0" text="Feedback Management">
        <font>
            <Font size="16.0" />
        </font>
    </Button>

    <Button fx:id="btnReschedule" onAction="#handleRescheduleButton" prefWidth="300.0" text="Reschedule Management">
        <font>
            <Font size="16.0" />
        </font>
    </Button>
</VBox>

