<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="Controllers.user.ResetPasswordController"
           style="-fx-background-color: linear-gradient(to bottom right, #5BA3F5, #4A90E2);">

    <VBox alignment="CENTER" spacing="15" maxWidth="400"
          style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 20;">

        <Label text="Reset Password"
               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

        <TextField fx:id="txtEmail" editable="false"/>

        <TextField fx:id="txtCode"
                   promptText="Enter reset code"/>

        <PasswordField fx:id="txtNewPassword"
                       promptText="New password"/>

        <PasswordField fx:id="txtConfirm"
                       promptText="Confirm password"/>

        <Button text="Reset Password"
                onAction="#handleReset"/>

        <Label fx:id="lblStatus"
               style="-fx-text-fill: red;"/>

        <Hyperlink text="Back to Login"
                   onAction="#handleBackToLogin"/>

    </VBox>

</StackPane>