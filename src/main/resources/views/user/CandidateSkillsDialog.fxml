<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<DialogPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.user.CandidateSkillsController"
            stylesheets="@../../styles.css"
            style="-fx-background-color:#EBF0F8; -fx-background-radius:16;">

    <content>
        <VBox spacing="16" style="-fx-padding:24; -fx-background-color:#EBF0F8;">

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="12"
                  style="-fx-background-color:white; -fx-background-radius:12; -fx-padding:14 18;
                         -fx-border-color:#E4EBF5; -fx-border-width:1; -fx-border-radius:12;
                         -fx-effect:dropshadow(gaussian,rgba(91,163,245,0.09),10,0,0,2);">
                <StackPane>
                    <Circle radius="18" style="-fx-fill:#EFF6FF;"/>
                    <Label text="âš¡" style="-fx-font-size:14px;"/>
                </StackPane>
                <VBox spacing="2" HBox.hgrow="ALWAYS">
                    <Label text="My Skills"
                           style="-fx-font-size:16px; -fx-font-weight:800; -fx-text-fill:#1E293B;"/>
                    <Label text="Add, edit or remove your professional skills"
                           style="-fx-font-size:11px; -fx-text-fill:#64748B;"/>
                </VBox>
                <Label fx:id="lblStatus" text=""
                       style="-fx-font-size:12px; -fx-text-fill:#10B981; -fx-font-weight:600;"/>
            </HBox>

            <!-- Skills list -->
            <ScrollPane fitToWidth="true" prefViewportHeight="300"
                        style="-fx-background:transparent; -fx-background-color:transparent; -fx-border-color:transparent;">
                <VBox fx:id="rowsBox" spacing="8"
                      style="-fx-padding:4 2; -fx-background-color:transparent;"/>
            </ScrollPane>

            <!-- Actions -->
            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color:white; -fx-background-radius:12; -fx-padding:12 16;
                         -fx-border-color:#E4EBF5; -fx-border-width:1; -fx-border-radius:12;">
                <Button text="âž•  Add Skill" onAction="#handleAddRow"
                        style="-fx-background-color:#EFF6FF; -fx-text-fill:#1D4ED8; -fx-font-weight:700;
                               -fx-font-size:12px; -fx-background-radius:8; -fx-padding:8 14;
                               -fx-border-color:#BFDBFE; -fx-border-width:1.5; -fx-border-radius:8; -fx-cursor:hand;"/>
                <Button text="ðŸ’¾  Save" onAction="#handleSave"
                        style="-fx-background-color:linear-gradient(to right,#5BA3F5,#4A90E2); -fx-text-fill:white;
                               -fx-font-weight:700; -fx-font-size:12px; -fx-background-radius:8; -fx-padding:8 14;
                               -fx-cursor:hand; -fx-effect:dropshadow(gaussian,rgba(91,163,245,0.4),8,0,0,2);"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="ðŸ—‘  Clear All" onAction="#handleDeleteAll"
                        style="-fx-background-color:#FFF1F2; -fx-text-fill:#9F1239; -fx-font-weight:700;
                               -fx-font-size:12px; -fx-background-radius:8; -fx-padding:8 14;
                               -fx-border-color:#FECDD3; -fx-border-width:1.5; -fx-border-radius:8; -fx-cursor:hand;"/>
            </HBox>

        </VBox>
    </content>

</DialogPane>
