    <!-- â•â• RIGHT PANEL â€” Login Form â•â• -->
    <VBox alignment="CENTER" HBox.hgrow="ALWAYS"
          style="-fx-background-color: #EBF0F8; -fx-padding: 60 80;">

        <VBox spacing="32" maxWidth="420">

            <!-- Header -->
            <VBox spacing="6">
                <Label text="Welcome back"
                       style="-fx-font-size:28px; -fx-font-weight:800; -fx-text-fill:#1E293B;"/>
                <Label text="Sign in to your account to continue"
                       style="-fx-font-size:14px; -fx-text-fill:#64748B;"/>
            </VBox>

            <!-- Form Card -->
