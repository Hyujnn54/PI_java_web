<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.interview.InterviewManagementController"
      spacing="14"
      style="-fx-background-color: #EBF0F8; -fx-padding: 20;"
      stylesheets="@/styles.css">

    <!-- â”€â”€ Header â”€â”€ -->
    <HBox alignment="CENTER_LEFT" spacing="12">
        <VBox spacing="3" HBox.hgrow="ALWAYS">
            <Label text="Mes Entretiens"
                   style="-fx-font-size: 24px; -fx-font-weight: 700; -fx-text-fill: #2c3e50;"/>
            <Label text="Gerez et suivez vos entretiens"
                   style="-fx-font-size: 12px; -fx-text-fill: #8FA3B8;"/>
        </VBox>
        <Button fx:id="btnScheduleNew" text="+ Planifier" visible="false" managed="false"
                styleClass="btn-primary" onAction="#handleScheduleNew"/>
    </HBox>

    <!-- â”€â”€ Search + Sort bar â”€â”€ -->
    <VBox fx:id="searchBox" spacing="10" visible="false" managed="false"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 14 16;
                 -fx-effect: dropshadow(gaussian,rgba(91,163,245,0.09),10,0,0,2);
                 -fx-border-color:#E8EEF8; -fx-border-width:1; -fx-border-radius:12;">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Rechercher :" style="-fx-font-size:13px; -fx-text-fill:#495057; -fx-font-weight:600;"/>
            <ComboBox fx:id="comboSearchCriteria" prefWidth="140" styleClass="modern-combo"/>
            <TextField fx:id="txtSearchInterview" promptText="Rechercher..."
                       HBox.hgrow="ALWAYS" styleClass="modern-search-field"/>
            <DatePicker fx:id="dateSearchPicker" prefWidth="160" visible="false" managed="false"
                        styleClass="modern-combo"/>
            <ComboBox fx:id="comboSearchMode"   prefWidth="155" visible="false" managed="false" styleClass="modern-combo"/>
            <ComboBox fx:id="comboSearchStatus" prefWidth="175" visible="false" managed="false" styleClass="modern-combo"/>
            <Button fx:id="btnSearchInterview" text="ðŸ”" styleClass="btn-primary"
                    style="-fx-padding:8 14; -fx-font-size:12px;" onAction="#handleSearchInterview"/>
            <Button fx:id="btnClearSearch" text="âœ•" styleClass="btn-secondary"
                    style="-fx-padding:8 12; -fx-font-size:12px;" onAction="#handleClearSearch"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Trier par :" style="-fx-font-size:13px; -fx-text-fill:#495057; -fx-font-weight:600;"/>
            <ComboBox fx:id="comboSortBy"  prefWidth="185" styleClass="modern-combo"/>
            <ComboBox fx:id="comboSortDir" prefWidth="130" styleClass="modern-combo"/>
            <Button text="â†•" styleClass="btn-secondary"
                    style="-fx-padding:8 12; -fx-font-size:12px;" onAction="#handleApplySort"/>
        </HBox>
    </VBox>

    <!-- â”€â”€ SplitPane: LEFT = card list  |  RIGHT = dynamic detail panel â”€â”€ -->
    <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.55"
               style="-fx-background-color: transparent; -fx-padding: 0; -fx-box-border: transparent;">

        <!-- LEFT: scrollable card list only -->
        <ScrollPane fitToWidth="true" styleClass="transparent-scroll"
                    style="-fx-background: transparent; -fx-background-color: #EBF0F8;">
            <VBox fx:id="interviewsListContainer" spacing="10"
                  style="-fx-background-color: #EBF0F8;">
                <padding><Insets bottom="16" top="4" left="2" right="8"/></padding>
            </VBox>
        </ScrollPane>

        <!-- RIGHT: dynamically populated by controller -->
        <ScrollPane fitToWidth="true" styleClass="transparent-scroll"
                    style="-fx-background: transparent; -fx-background-color: #EBF0F8;">
            <VBox fx:id="rightPanel" spacing="14"
                  style="-fx-background-color: #EBF0F8;">
                <padding><Insets top="4" left="8" right="4" bottom="16"/></padding>

                <!-- placeholder shown by default -->
                <VBox fx:id="rightPanelPlaceholder" alignment="CENTER" spacing="16"
                      style="-fx-background-color: white; -fx-background-radius: 14; -fx-padding: 50 24;
                             -fx-border-color:#E8EEF8; -fx-border-width:1; -fx-border-radius:14;
                             -fx-effect: dropshadow(gaussian,rgba(91,163,245,0.09),12,0,0,3);">
                    <Label text="ðŸ“‹" style="-fx-font-size:40px;"/>
                    <Label text="Selectionnez un entretien"
                           style="-fx-font-size:14px; -fx-font-weight:700; -fx-text-fill:#2c3e50;"/>
                    <Label text="Cliquez sur une carte pour voir les details, modifier ou gerer le retour"
                           style="-fx-font-size:12px; -fx-text-fill:#8FA3B8; -fx-text-alignment:center;"
                           wrapText="true"/>
                </VBox>

                <!-- dynamic content injected here by controller -->
                <VBox fx:id="rightPanelContent" spacing="14" managed="false" visible="false"/>

                <!-- hidden FXML form fields wired to @FXML â€” kept invisible, used by handlers -->
                <VBox visible="false" managed="false">
                    <DatePicker fx:id="datePicker"/>
                    <TextField  fx:id="txtTime"/>
                    <TextField  fx:id="txtDuration"/>
                    <ComboBox   fx:id="comboMode"/>
                    <TextField  fx:id="txtMeetingLink"/>
                    <HBox       fx:id="meetingLinkBox">
                        <Button fx:id="btnGenerateMeetingLink" onAction="#handleGenerateMeetingLink"/>
                        <Button fx:id="btnOpenMeetingLink"     onAction="#handleOpenMeetingLink"/>
                    </HBox>
                    <TextField  fx:id="txtLocation"/>
                    <TextArea   fx:id="txtNotes"/>
                    <Label      fx:id="lblMeetingLink"/>
                    <Label      fx:id="lblLocation"/>
                    <ComboBox   fx:id="comboFeedbackDecision"/>
                    <TextField  fx:id="txtFeedbackScore"/>
                    <Label      fx:id="lblScoreIndicator"/>
                    <TextArea   fx:id="txtFeedbackComments"/>
                    <Button     fx:id="btnUpdateFeedbackAction" onAction="#handleUpdateFeedbackAction"/>
                    <Button     fx:id="btnDeleteFeedback"       onAction="#handleDeleteFeedback"/>
                    <Button     fx:id="btnCancelFeedback"       onAction="#handleCancelFeedback"/>
                    <Button     fx:id="btnSave"                 onAction="#handleSaveInterview"/>
                    <TextField  fx:id="txtApplicationId"/>
                    <TextField  fx:id="txtRecruiterId"/>
                    <ComboBox   fx:id="comboStatus"/>
                    <!-- legacy bottom buttons â€” hidden -->
                    <HBox fx:id="bottomActionButtons">
                        <Button fx:id="btnUpdate" onAction="#handleUpdateInterview"/>
                        <Button fx:id="btnDelete" onAction="#handleDeleteInterview"/>
                    </HBox>
                    <!-- legacy panels â€” hidden -->
                    <VBox fx:id="feedbackPanel"/>
                    <VBox fx:id="editDialog"/>
                </VBox>

            </VBox>
        </ScrollPane>

    </SplitPane>

</VBox>

