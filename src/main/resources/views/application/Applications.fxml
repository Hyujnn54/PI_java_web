<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.application.ApplicationsController"
      spacing="20" styleClass="page"
      stylesheets="@/styles.css"
      style="-fx-background-color: #f8f9fa;">

    <padding>
        <Insets top="25" left="25" right="25" bottom="25"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Candidatures" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="lblSubtitle" text="Examiner et gerer les candidatures"
                   style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
        </VBox>
    </HBox>

    <!-- Search Bar -->
    <HBox spacing="12" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 12 15; -fx-effect: dropshadow(gaussian,rgba(0,0,0,0.06),10,0,0,2);">
        <ComboBox fx:id="cbSearchCriteria" promptText="Rechercher par..."
                  prefWidth="180"
                  style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8;"/>
        <TextField fx:id="txtSearch" promptText="Rechercher..."
                   HBox.hgrow="ALWAYS"
                   style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 10 14; -fx-border-color: #e9ecef; -fx-border-radius: 8;"/>
        <Button fx:id="btnSearch" text="Rechercher"
                style="-fx-background-color: #5BA3F5; -fx-text-fill: white; -fx-font-weight: 600; -fx-padding: 10 18; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button fx:id="btnClear" text="Effacer"
                style="-fx-background-color: #e9ecef; -fx-text-fill: #6c757d; -fx-font-weight: 600; -fx-padding: 10 14; -fx-background-radius: 8; -fx-cursor: hand;"/>
    </HBox>

    <!-- Split View -->
    <HBox spacing="20" VBox.vgrow="ALWAYS" styleClass="split-view-container">

        <!-- LEFT: Candidate / Application list -->
        <VBox spacing="12" prefWidth="420" minWidth="380" maxWidth="460"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian,rgba(0,0,0,0.08),15,0,0,2);">
            <Label text="Liste des Candidatures"
                   style="-fx-font-size: 16px; -fx-font-weight: 700; -fx-text-fill: #2c3e50;"/>
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                        style="-fx-background: transparent; -fx-background-color: transparent;">
                <VBox fx:id="candidateListContainer" spacing="10" style="-fx-padding: 5 0;"/>
            </ScrollPane>
        </VBox>

        <!-- RIGHT: Detail view -->
        <VBox HBox.hgrow="ALWAYS"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian,rgba(0,0,0,0.08),15,0,0,2);">
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                        style="-fx-background: transparent; -fx-background-color: transparent;">
                <VBox fx:id="mainContainer" spacing="20" style="-fx-padding: 10 5 10 0;"/>
            </ScrollPane>
        </VBox>

    </HBox>

</VBox>

