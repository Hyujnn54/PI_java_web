<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.application.ApplicationsController"
      spacing="14" styleClass="page"
      stylesheets="@/styles.css"
      style="-fx-background-color: #EBF0F8; -fx-padding: 20;">

    <!-- â”€â”€ Header â”€â”€ -->
    <HBox alignment="CENTER_LEFT" spacing="12">
        <VBox spacing="3" HBox.hgrow="ALWAYS">
            <Label text="Candidatures"
                   style="-fx-font-size: 24px; -fx-font-weight: 700; -fx-text-fill: #2c3e50;"/>
            <Label text="Examiner et gerer les candidatures"
                   style="-fx-font-size: 12px; -fx-text-fill: #8FA3B8;"/>
        </VBox>
    </HBox>

    <!-- â”€â”€ Search Bar â”€â”€ -->
    <HBox spacing="10" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 12 16;
                 -fx-effect: dropshadow(gaussian,rgba(91,163,245,0.09),10,0,0,2);
                 -fx-border-color:#E8EEF8; -fx-border-width:1; -fx-border-radius:12;">
        <ComboBox fx:id="cbSearchCriteria" promptText="Rechercher par..."
                  prefWidth="175" styleClass="modern-combo"/>
        <TextField fx:id="txtSearch" promptText="Rechercher..."
                   HBox.hgrow="ALWAYS" styleClass="modern-search-field"/>
        <Button fx:id="btnSearch"  text="ðŸ”  Rechercher" styleClass="btn-primary"
                style="-fx-padding: 9 18; -fx-font-size:13px;" onAction="#performSearch"/>
        <Button fx:id="btnClear"   text="âœ•  Effacer"     styleClass="btn-secondary"
                style="-fx-padding: 9 14; -fx-font-size:13px;" onAction="#clearSearch"/>
    </HBox>

    <!-- â”€â”€ SplitPane: LEFT = list | RIGHT = detail â”€â”€ -->
    <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.40"
               style="-fx-background-color: transparent; -fx-padding: 0; -fx-box-border: transparent;">

        <!-- LEFT -->
        <ScrollPane fitToWidth="true" styleClass="transparent-scroll"
                    style="-fx-background: transparent; -fx-background-color: #EBF0F8;">
            <VBox spacing="10" style="-fx-background-color: #EBF0F8;">
                <padding><Insets top="4" left="2" right="8" bottom="16"/></padding>
                <!-- Count badge -->
                <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 0 0 4 2;">
                    <Label text="Liste des Candidatures"
                           style="-fx-font-size:13px; -fx-font-weight:700; -fx-text-fill:#2c3e50;"
                           HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblSubtitle"
                           style="-fx-font-size:11px; -fx-text-fill:#8FA3B8;
                                  -fx-background-color:#D4DCE8; -fx-background-radius:10; -fx-padding:2 8;"/>
                </HBox>
                <VBox fx:id="candidateListContainer" spacing="8"/>
            </VBox>
        </ScrollPane>

        <!-- RIGHT -->
        <ScrollPane fitToWidth="true" styleClass="transparent-scroll"
                    style="-fx-background: transparent; -fx-background-color: #EBF0F8;">
            <VBox fx:id="mainContainer" spacing="14"
                  style="-fx-background-color: #EBF0F8;">
                <padding><Insets top="4" left="8" right="4" bottom="16"/></padding>
                <!-- Placeholder -->
                <VBox fx:id="appDetailPlaceholder" alignment="CENTER" spacing="16"
                      style="-fx-background-color: white; -fx-background-radius: 14; -fx-padding: 50 24;
                             -fx-border-color:#E8EEF8; -fx-border-width:1; -fx-border-radius:14;
                             -fx-effect: dropshadow(gaussian,rgba(91,163,245,0.09),12,0,0,3);">
                    <Label text="ðŸ“‹" style="-fx-font-size:40px;"/>
                    <Label text="SÃ©lectionnez une candidature"
                           style="-fx-font-size:14px; -fx-font-weight:700; -fx-text-fill:#2c3e50;"/>
                    <Label text="Cliquez sur une carte pour voir les dÃ©tails et gÃ©rer la candidature"
                           style="-fx-font-size:12px; -fx-text-fill:#8FA3B8; -fx-text-alignment:center;"
                           wrapText="true"/>
                </VBox>
            </VBox>
        </ScrollPane>

    </SplitPane>

</VBox>

