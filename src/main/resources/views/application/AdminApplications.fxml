<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.application.AdminApplicationsController"
      spacing="18" styleClass="page"
      stylesheets="@/styles.css"
      style="-fx-background-color: #EBF0F8;">

    <padding><Insets top="22" left="22" right="22" bottom="22"/></padding>

    <HBox alignment="CENTER_LEFT" spacing="16">
        <VBox spacing="4" HBox.hgrow="ALWAYS">
            <Label text="Toutes les Candidatures"
                   style="-fx-font-size: 24px; -fx-font-weight: 700; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="lblTotalCount" text="Vue globale - Admin"
                   style="-fx-font-size: 13px; -fx-text-fill: #8FA3B8;"/>
        </VBox>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 12 16;
                 -fx-effect: dropshadow(gaussian,rgba(91,163,245,0.09),10,0,0,2);
                 -fx-border-color:#E8EEF8; -fx-border-width:1; -fx-border-radius:12;">
        <ComboBox fx:id="cbSearchCriteria" promptText="Rechercher par..."
                  prefWidth="180" styleClass="modern-combo"/>
        <TextField fx:id="txtSearch" promptText="Rechercher..."
                   HBox.hgrow="ALWAYS" styleClass="modern-search-field"/>
        <Button fx:id="btnSearch" text="Rechercher"
                onAction="#handleSearch" styleClass="btn-primary"
                style="-fx-padding:9 18; -fx-font-size:13px;"/>
        <Button fx:id="btnClear" text="Effacer"
                onAction="#handleClear" styleClass="btn-secondary"
                style="-fx-padding:9 14; -fx-font-size:13px;"/>
    </HBox>

    <HBox spacing="14" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10 16;
                 -fx-border-color:#E8EEF8; -fx-border-width:1; -fx-border-radius:10;">
        <Label text="Statut :" style="-fx-font-size:13px; -fx-font-weight:600; -fx-text-fill:#5A7080;"/>
        <ComboBox fx:id="cbStatusFilter" promptText="Tous" prefWidth="160" styleClass="modern-combo"/>
        <CheckBox fx:id="chkShowArchived" text="Afficher archives"
                  style="-fx-font-size:13px; -fx-text-fill:#5A7080;"/>
    </HBox>

    <HBox spacing="16" VBox.vgrow="ALWAYS">

        <VBox spacing="10" prefWidth="400" minWidth="360" maxWidth="450"
              style="-fx-background-color: #E4EBF5; -fx-background-radius: 14; -fx-padding: 18;
                     -fx-border-color:#D4DCE8; -fx-border-width:1; -fx-border-radius:14;">
            <Label text="Liste des Candidatures"
                   style="-fx-font-size:14px; -fx-font-weight:700; -fx-text-fill:#2c3e50;"/>
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="transparent-scroll"
                        style="-fx-background: transparent; -fx-background-color: transparent;">
                <VBox fx:id="applicationListContainer" spacing="8" style="-fx-padding: 2 0;"/>
            </ScrollPane>
        </VBox>

        <VBox HBox.hgrow="ALWAYS"
              style="-fx-background-color: white; -fx-background-radius: 14; -fx-padding: 20;
                     -fx-effect: dropshadow(gaussian,rgba(91,163,245,0.09),14,0,0,3);
                     -fx-border-color:#E8EEF8; -fx-border-width:1; -fx-border-radius:14;">
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="transparent-scroll"
                        style="-fx-background: transparent; -fx-background-color: transparent;">
                <VBox fx:id="detailContainer" spacing="14" style="-fx-padding: 4 4 4 0;">
                    <Label text="Selectionnez une candidature"
                           style="-fx-text-fill:#A0B0C0; -fx-font-size:14px; -fx-padding:40 0 0 16;"/>
                </VBox>
            </ScrollPane>
        </VBox>

    </HBox>

</VBox>


