<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.events.MainSelectionController" stylesheets="@../style/modern.css">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   <children>
      <Label text="Bienvenue sur RH Platform" styleClass="header-label"/>
      <Label text="Veuillez choisir votre espace :" style="-fx-font-size: 16px;"/>
      
      <HBox spacing="20.0" alignment="CENTER">
          <Button text="Espace Candidat (Front Office)" onAction="#goToFrontOffice" prefWidth="250.0" prefHeight="50.0" styleClass="btn-primary"/>
          <Button text="Espace Recruteur (Back Office)" onAction="#goToBackOffice" prefWidth="250.0" prefHeight="50.0" styleClass="btn-primary"/>
      </HBox>
   </children>
</VBox>
