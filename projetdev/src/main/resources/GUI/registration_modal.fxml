<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox prefWidth="450.0" spacing="20.0" styleClass="card" stylesheets="@../style/modern.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegistrationModalController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <VBox spacing="5.0">
         <children>
            <Label styleClass="page-title" text="Confirmer l'inscription" />
            <Label styleClass="text-secondary" text="Veuillez vérifier vos informations avant de confirmer." />
         </children>
      </VBox>
      
      <GridPane hgap="15.0" vgap="15.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>
        <children>
           <Label text="Événement :" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label-header" />
           <Label fx:id="eventTitleField" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="0" />
           
           <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label-header" />
           <Label fx:id="lastNameField" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="1" />
           
           <Label text="Prénom :" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="label-header" />
           <Label fx:id="firstNameField" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="2" />
           
           <Label text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="label-header" />
           <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="modern-text-field" />
        </children>
      </GridPane>
      
      <HBox alignment="CENTER_RIGHT" spacing="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleCancel" styleClass="btn-secondary" text="Annuler" />
            <Button mnemonicParsing="false" onAction="#handleConfirm" styleClass="btn-primary" text="Confirmer l'inscription" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
